<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Playwright101Certification" verbose="1" parallel="tests" thread-count="2">

     <test name="Testing on Chrome">
        <parameter name="Browser" value="Chrome" />
        <parameter name="Platform" value="Windows 10" />
        <parameter name="BrowserVersion" value="latest" />
        <classes>  
            <class name="test.java.Testcases.TestScenario1"/>
            <class name="test.java.Testcases.TestScenario2"/>
            <class name="test.java.Testcases.TestScenario3"/>
        </classes>
    </test>
    
    <test name="Testing on Firefox">
        <parameter name="Browser" value="pw-firefox" />
        <parameter name="Platform" value="Windows 10" />
        <parameter name="BrowserVersion" value="latest" />
        <classes>
            <class name="test.java.Testcases.TestScenario1"/>
            <class name="test.java.Testcases.TestScenario2"/>
            <class name="test.java.Testcases.TestScenario3"/>
        </classes>
    </test>
    
    <test name="Testing on Edge">
        <parameter name="Browser" value="MicrosoftEdge" />
        <parameter name="Platform" value="macOS Catalina" />
        <parameter name="BrowserVersion" value="latest" />
        <classes>
            <class name="test.java.Testcases.TestScenario1"/>
            <class name="test.java.Testcases.TestScenario2"/>
            <class name="test.java.Testcases.TestScenario3"/>
        </classes>
    </test>
    
</suite>